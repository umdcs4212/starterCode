{
  "version": 3,
  "configurePresets": [
    {
      "name": "default",
      "binaryDir": "${sourceDir}/buildVCPkg",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
      }
    },
    {
      "name": "dev",
      "binaryDir": "${sourceDir}/buildDev",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
        "ENABLE_DEV_MODE": "ON",
        "ENABLE_TESTS": "ON",
        "CMAKE_POLICY_VERSION_MINIMUM": "3.5"
      }
    },
    {
      "name": "Release",
      "binaryDir": "${sourceDir}/buildRelease",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
      }
    },
    {
      "name": "msvc",
      "inherits": "default",
      "environment": {
        "__comment__": "Set VCPKG_ROOT to your local vcpkg installation path",
        "VCPKG_ROOT": "C:/Users/willemsn/dev/vcpkg"
      }
    }
  ]
}
